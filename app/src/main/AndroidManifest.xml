<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brunel.fyp_not_eat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Don&apos;t EAT"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Don&apos;t EAT"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".UserInputActivity"
            android:label="@string/title_activity_user_input"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".UserInputHealthActivity"
            android:label="@string/title_activity_user_input_health"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".DiseaseListActivity"
            android:label="@string/title_activity_disease_list"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".DisplayActivity"
            android:label="@string/title_activity_display"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
    </application>

</manifest>